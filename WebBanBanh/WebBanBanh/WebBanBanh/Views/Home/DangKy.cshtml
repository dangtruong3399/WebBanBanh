@using CaptchaMvc.HtmlHelpers
@using CaptchaMvc

@using WebBanBanh.Models
@model KHACHHANG

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/DangKyLayout.cshtml";
}


<div class=" container">
    <div class=" register">
        <h1>Đăng ký thành viên</h1>
        @using (Html.BeginForm())
        {
            <div class="col-md-6 register-top-grid">
                <h3> Thông tin cá nhân</h3>

                <div>
                    <span>Họ tên</span>
                    @Html.TextBox("HOTEN")
                </div>
                <div>
                    <span>Địa chỉ</span>
                    @Html.TextBox("DIACHI")
                </div>
                <div>
                    <span>Email</span>
                    @Html.TextBox("EMAIL")
                </div>
                <div>
                    <span>Số điện thoại</span>
                    @Html.TextBox("SODIENTHOAI")
                </div>

            </div>
            <div class="col-md-6 register-top-grid">
                <h3>Thông tin Đăng nhập</h3>
                <div>
                    <span>Tài khoản</span>
                    @Html.TextBox("TAIKHOAN")
                </div>
                <div>
                    <span>Mật khẩu</span>
                    @Html.Password("MATKHAU")
                </div>
                <div>
                    <span>Nhập lại mật khẩu</span>
                    @Html.Password("NhapLaiMATKHAU")
                </div>
                <div>
                    @Html.Captcha(3)
                </div>
                <input type="submit" value="Xác nhận">
            </div>
            <div class="clearfix"></div>
        }
    </div>
</div>
<h1 style="color:red;">@ViewBag.ThongBao</h1>

<style>
    .register-top-grid input[type="text"], .register-top-grid input[type="password"] {
        width: 80%;
        padding: 0.5em;
        margin: 1em 0;
        background: none;
        outline: none;
        border: 1px solid #A09F9F;
        -webkit-appearance: none;
    }

    .register-top-grid input[type="submit"] {
        background: #EF5F21;
        padding: 0.4em 1em;
        color: #fff;
        font-size: 1.2em;
        transition: 0.5s all;
        -webkit-transition: 0.5s all;
        -moz-transition: 0.5s all;
        -o-transition: 0.5s all;
        display: inline-block;
        border: none;
        outline: none;
    }
</style>