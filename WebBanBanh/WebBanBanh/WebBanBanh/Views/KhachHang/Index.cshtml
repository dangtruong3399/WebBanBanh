    <script>
        var table = document.getElementById('tableCUSTOMshow');

        document.getElementById("HOTEN").readOnly = true;
        document.getElementById("MATKHAU").readOnly = true;
        document.getElementById("TAIKHOAN").readOnly = true;
        document.getElementById("DIACHI").readOnly = true;
        document.getElementById("EMAIL").readOnly = true;
        document.getElementById("SODIENTHOAI").readOnly = true;
        document.getElementById("saveCUSTOMER").disabled = true;
        for (var i = 1; i < table.rows.length; i++) {
            table.rows[i].onclick = function () {
                document.getElementById("MAKH").value = this.cells[0].innerHTML;
                document.getElementById("SODIENTHOAI").value = this.cells[4].innerHTML;
                document.getElementById("HOTEN").value = this.cells[3].innerHTML;
                document.getElementById("MATKHAU").value = this.cells[2].innerHTML;
                document.getElementById("TAIKHOAN").value = this.cells[1].innerHTML;
                document.getElementById("DIACHI").value = this.cells[5].innerHTML;
                document.getElementById("EMAIL").value = this.cells[6].innerHTML;

            };
        }

        function activeDeleteCUSTOMER() {
            if (confirm("Xóa mã loại sản phẩm này đồng nghĩa với tất cả hóa đơn và chi tiết hóa đơn có khách hàng này cũng bị xóa , bạn chắc chắn xóa chứ!!")) {
                window.location.href = "/KhachHang/DeleteKhachHang/" + document.getElementById("MAKH").value;

                alert("Xóa Thành Công");
            }
            else
                alert("Xóa Thất Bại");

        }
        function activeEditCUSTOMER() {
            document.getElementById("HOTEN").readOnly = false;
            document.getElementById("MATKHAU").readOnly = false;
            document.getElementById("TAIKHOAN").readOnly = false;
            document.getElementById("DIACHI").readOnly = false;
            document.getElementById("EMAIL").readOnly = false;
            document.getElementById("SODIENTHOAI").readOnly = false;
            document.getElementById("saveCUSTOMER").disabled = false;
            document.getElementById("activeDeleteCUSTOMER").disabled = true;
        }
    </script>

